{
  "compilerOptions": {
    "target": "ES6",
    "module": "ES6",
    "moduleResolution": "node",
    "lib": ["esnext", "dom", "dom.iterable"],
    "declaration": true,
    // "inlineSourceMap": true,
    "sourceMap": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "experimentalDecorators": true,
    "skipLibCheck": true,
    "strict": true,
    "baseUrl": "./packages",
    "paths": {
      "@codin/cwc-*": ["./*/src"],
    },
    "noEmitHelpers": true,
    "importHelpers": true,
    "composite": true,
  },
  "include": [
    "./packages/*/tsconfig.json"
  ],
  "exclude": ["node_modules"],
  "references": [
    {"path": "./packages/code-highlight"},
    {"path": "./packages/intersection"},
    {"path": "./packages/picture"},
    {"path": "./packages/runkit"}
  ]
}
