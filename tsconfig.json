{
  "compilerOptions": {
    "target": "ES6",
    "module": "ES6",
    "moduleResolution": "node",
    "lib": ["esnext", "dom", "dom.iterable"],
    "declaration": true,
    "inlineSourceMap": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "experimentalDecorators": true,
    "skipLibCheck": true,
    "strict": true,
    "baseUrl": "./packages",
    "paths": {
      "@codin/cwc-*": ["./packages/*/src"]
    },
    "noEmitHelpers": true,
    "importHelpers": true,
    "composite": true,
  },
  "include": [
    "src/*.ts"
  ],
  "exclude": ["node_modules"],
  "references": [
    {"path": "packages/intersection"},
    {"path": "packages/picture"}
  ]
}
