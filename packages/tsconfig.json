{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "node",
    "lib": ["esnext", "dom", "dom.iterable"],
    "declaration": true,
    "sourceMap": true,
    "inlineSources": true,
    "noEmit": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "experimentalDecorators": true,
    "skipLibCheck": true,
    "strict": true,
    "baseUrl": ".",
    "paths": {
      "@codin/cwc-*": ["./*/src"]
    },
    "noEmitHelpers": true,
    "importHelpers": true,
    "plugins": [
      {
        "name": "typescript-lit-html-plugin"
      }
    ],
  },
  "include": ["./global.d.ts"],
  "exclude": [],
}
